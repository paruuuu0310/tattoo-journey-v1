{
  "name": "tattoo-journey-2.0",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build && afplay /System/Library/Sounds/Hero.aiff",
    "build:silent": "next build",
    "start": "next start",
    "lint": "next lint && afplay /System/Library/Sounds/Glass.aiff",
    "lint:fix": "next lint --fix && afplay /System/Library/Sounds/Glass.aiff",
    "format": "prettier --write . && afplay /System/Library/Sounds/Ping.aiff",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit && afplay /System/Library/Sounds/Glass.aiff",
    "test:all": "npm run type-check && npm run lint && npm run build:silent && afplay /System/Library/Sounds/Hero.aiff",
    "prepare": "husky",
    "setup": "./scripts/setup.sh",
    "dev:web": "./scripts/dev.sh web",
    "dev:mobile:ios": "./scripts/dev.sh mobile:ios",
    "dev:mobile:android": "./scripts/dev.sh mobile:android",
    "clean": "./scripts/dev.sh clean",
    "install:all": "./scripts/dev.sh install:all",
    "status": "./scripts/dev.sh status",
    "notify:success": "afplay /System/Library/Sounds/Hero.aiff",
    "notify:complete": "afplay /System/Library/Sounds/Glass.aiff",
    "notify:error": "afplay /System/Library/Sounds/Sosumi.aiff"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "next lint --fix --file",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Tattoo Journey - タトゥーアーティスト検索・予約プラットフォーム",
  "dependencies": {
    "firebase": "^12.1.0",
    "next": "^15.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  }
}

{
  "name": "tattoo-journey-2.0-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "web",
      "mobile",
      "shared"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native-*",
      "**/@react-native/*",
      "**/metro*"
    ]
  },
  "scripts": {
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "dev:mobile:ios": "cd mobile && npm run ios",
    "dev:mobile:android": "cd mobile && npm run android",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "lint": "npm run lint:web && npm run lint:mobile",
    "lint:web": "cd web && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "format": "prettier --write . && afplay /System/Library/Sounds/Ping.aiff",
    "format:check": "prettier --check .",
    "type-check": "npm run type-check:web && npm run type-check:mobile",
    "type-check:web": "cd web && npm run type-check",
    "type-check:mobile": "cd mobile && npm run type-check",
    "test": "npm run test:web && npm run test:mobile",
    "test:web": "echo 'Web tests not configured yet'",
    "test:mobile": "cd mobile && npm run test",
    "test:firebase": "cd mobile && npm run test:firebase",
    "test:e2e": "cd mobile && npm run test:e2e",
    "test:journey": "cd mobile && npm run test:journey",
    "test:all-mobile": "cd mobile && npm run test:all",
    "install:all": "npm install",
    "build:shared": "cd shared && npm run build",
    "build:all": "npm run build:shared && npm run build:web && npm run build:mobile",
    "clean": "rm -rf node_modules web/node_modules mobile/node_modules shared/node_modules web/.next mobile/ios/build shared/dist",
    "clean:cache": "npm run clean && rm -rf ~/.npm && npm cache clean --force",
    "setup": "./scripts/setup.sh",
    "test:server": "./scripts/test-server.sh",
    "deploy:dev": "./infrastructure/deploy.sh dev",
    "deploy:staging": "./infrastructure/deploy.sh staging",
    "deploy:prod": "./infrastructure/deploy.sh prod",
    "firebase:emulator": "firebase emulators:start",
    "firebase:rules:test": "firebase emulators:exec --only firestore 'npm run test:firebase'"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "tattoo",
    "booking",
    "mobile",
    "web",
    "react-native",
    "nextjs"
  ],
  "author": "Karamon Inc.",
  "license": "MIT",
  "description": "Tattoo Journey 2.0 - AI-powered tattoo artist matching platform (Monorepo)",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@firebase/rules-unit-testing": "^2.0.7",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "verbose": true
  }
}

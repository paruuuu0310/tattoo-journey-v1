{
  "rules": {
    ".read": false,
    ".write": false,
    "chatRooms": {
      "$roomId": {
        ".read": "auth != null && root.child('chatRooms').child($roomId).child('participants').child(auth.uid).exists()",
        ".write": "auth != null && root.child('chatRooms').child($roomId).child('participants').child(auth.uid).exists()",
        "messages": {
          "$messageId": {
            ".read": "auth != null && root.child('chatRooms').child($roomId).child('participants').child(auth.uid).exists()",
            ".write": "auth != null && root.child('chatRooms').child($roomId).child('participants').child(auth.uid).exists() && newData.child('senderId').val() == auth.uid && newData.child('timestamp').val() == now && root.child('chatRooms').child($roomId).child('status').val() == 'active'",
            ".validate": "newData.hasChildren(['senderId', 'content', 'timestamp', 'type', 'id']) && newData.child('content').isString() && newData.child('senderId').val() == auth.uid && newData.child('type').val().matches('^(text|image|booking|system)$') && newData.child('content').val().length <= 1000"
          }
        },
        "typing": {
          "$userId": {
            ".read": "auth != null && root.child('chatRooms').child($roomId).child('participants').child(auth.uid).exists()",
            ".write": "auth != null && $userId == auth.uid && root.child('chatRooms').child($roomId).child('participants').child(auth.uid).exists() && root.child('chatRooms').child($roomId).child('status').val() == 'active'",
            ".validate": "newData.hasChildren(['isTyping', 'timestamp']) && newData.child('isTyping').isBoolean() && newData.child('timestamp').val() >= (now - 30000)"
          }
        },
        "readStatus": {
          "$userId": {
            ".read": "auth != null && root.child('chatRooms').child($roomId).child('participants').child(auth.uid).exists()",
            ".write": "auth != null && $userId == auth.uid && root.child('chatRooms').child($roomId).child('participants').child(auth.uid).exists()",
            ".validate": "newData.hasChildren(['lastReadMessageId', 'timestamp']) && newData.child('timestamp').val() <= now"
          }
        }
      }
    },
    "presence": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && $userId == auth.uid",
        ".validate": "newData.hasChildren(['online', 'lastSeen', 'device']) && newData.child('online').isBoolean() && newData.child('device').isString() && newData.child('device').val().length <= 50"
      }
    },
    "notifications": {
      "$userId": {
        ".read": "auth != null && $userId == auth.uid",
        ".write": "auth != null && $userId == auth.uid",
        "tokens": {
          "$tokenId": {
            ".validate": "newData.hasChildren(['token', 'platform', 'timestamp']) && newData.child('platform').val().matches('^(ios|android|web)$')"
          }
        }
      }
    },
    "analytics": {
      "$userId": {
        "events": {
          "$eventId": {
            ".write": "auth != null && $userId == auth.uid",
            ".validate": "newData.hasChildren(['event', 'timestamp', 'data']) && newData.child('timestamp').val() <= now"
          }
        }
      }
    }
  }
}

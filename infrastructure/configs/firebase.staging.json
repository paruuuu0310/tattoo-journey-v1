{
  "projectId": "tattoo-journey-staging",
  "firestore": {
    "rules": "firestore.staging.rules",
    "indexes": "firestore.indexes.json"
  },
  "database": {
    "rules": "database.staging.rules.json"
  },
  "storage": {
    "rules": "storage.staging.rules"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Environment",
            "value": "staging"
          },
          {
            "key": "X-Robots-Tag",
            "value": "noindex, nofollow"
          }
        ]
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run test",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions",
    "runtime": "nodejs18"
  }
}
